{{outlet}}
<div class="container">
    <div class="row" style="margin-top:50px">
        <div class="col-sm-12">
            <table class="table table-striped table-bordered">
                <tr>
                    <th>Task</th>
                    <th>Created</th>
                    <th>Update</th>
                    <th>Delete</th>
                </tr>
                {{#each model as |todo|}}
                <tr>
                    <td>{{todo.title}}</td>
                    <td>{{formatdate todo.created}}</td>
                    <td>{{#link-to 'todos.edit' todo.id}}<div class="btn btn-primary">Update</div>{{/link-to}}</td>
                    <td><button {{action 'deleteTodo' todo.id}} class="btn btn-danger">Delete</button></td>
                </tr>
                {{/each}}
            </table>
        </div>
    </div>
</div>
